<div class="d-flex flex-wrap align-items-center justify-content-center h-100 w-100">
    <div class="d-flex flex-column flex-wrap align-items-center justify-content-center my-5">
        <h1>Relatório de Vendas do Mês</h1>

        <div class="d-flex flex-wrap align-items-center justify-content-center h-100 w-100 bg-low-light-brown p-3">
            <h3 class="text-center text-white m-0"><strong>Total de vendas: </strong>R$ <%- ordersTotalAmount.toFixed(2) %></h3>
        </div>

        <div class="my-3">
            <h3><u>Pedidos</u></h3>

            <table class="table table-hover">
                <thead>
                  <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Total (R$)</th>
                    <th scope="col">Usuário</th>
                    <th scope="col">Criada em</th>
                  </tr>
                </thead>
                <tbody>
                    <% orders.forEach(function(order){ %>
                        <tr>
                            <th data-toggle="tooltip" data-placement="bottom" title=<%- order.id %>><%- order.id.substring(0,8) + '...' %></th>
                            <td><%- order.total.toFixed(2) %></td>
                            <td><%- order.owner.name %></td>
                            <td><%- order.createdAt.toLocaleString() %></td>
                        </tr>
                    <% }) %>
                </tbody>
              </table>
        </div>
    </div>
</div>
<div class="d-flex flex-column align-items-center justify-content-center mx-0 my-3 p-2 bg-white w-100">
    <div class="w-100">
        <h1 class="text-left mt-3"><u>Carrinho de Compras</u></h1>
        <a class="text-left" href="/products/showcase">Adicionar Produtos</a>
    </div>

    <div class="d-flex flex-wrap align-items-center justify-content-center bg-white w-100">
        <% if (cart && Object.keys(cart).length > 0) { %>
            <p><strong>Produtos</strong></p>
            <table class="table">
                <thead>
                  <tr>
                    <th scope="col">Produto</th>
                    <th scope="col">Quantidade</th>
                    <th scope="col"></th>
                  </tr>
                </thead>
                <tbody>
                    <% Object.keys(cart).forEach(function(productId){ %>
                        <tr>
                            <td><%- cart[productId].name %></td>
                            <td><%- cart[productId].quantity %></td>
                            <td>
                                <div class="d-flex flex-wrap">
                                    <button class="btn btn-success m-1" data-toggle="tooltip" data-placement="bottom" title="Aumentar quantidade"
                                        onclick=<%- "incItemQuantity('" + productId + "')"%>>
                                            <i class="fa-solid fa-plus"></i>
                                    </button>

                                    <button class="btn btn-warning m-1" data-toggle="tooltip" data-placement="bottom" title="Diminuir quantidade"
                                        onclick=<%- "decItemQuantity('" + productId + "')"%>>
                                            <i class="fa-solid fa-minus"></i>
                                    </button>

                                    <button class="btn btn-danger m-1" data-toggle="tooltip" data-placement="bottom" title="Remover produto"
                                        onclick=<%- "removeItemFromCart('" + productId + "')"%>>
                                            <i class="fa-solid fa-trash"></i>
                                    </button>
                                </div>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>

            <p><strong>Forma de Frete</strong></p>
            <select class="custom-select" id="selectShipping" name="shipping">
                <% for (let index = 0; index < shippings.length; index++) { %>
                    <% if (index === 0) { %>
                        <option selected value=<%- shippings[index].id %>>
                            <%- shippings[index].name + ' - R$ ' + shippings[index].price.toFixed(2) %>
                        </option>
                    <%} else { %>
                        <option value=<%- shippings[index].id %>>
                            <%- shippings[index].name + ' - R$ ' + shippings[index].price.toFixed(2) %>
                        </option>
                    <% } %>
                <% } %>
            </select>

            <button class="btn btn-primary my-3" onclick="goToCheckout()">
                Ir para pagamento
            </button>
        <%} else { %>
            <div class="my-3">
                <h3>Sem produtos no carrinho</h3>
                <a href="/products/showcase">Ir para lista de produtos</a>
            </div>
        <% } %>
    </div>
</div>
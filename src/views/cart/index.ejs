<div class="d-flex flex-column align-items-center justify-content-center mx-0 my-3 p-2 bg-white w-100">
    <div class="w-100">
        <h1 class="text-left mt-3"><u>Shopping Cart</u></h1>
    </div>

    <div class="d-flex align-items-center justify-content-center bg-white w-100">
        <% if (cart && Object.keys(cart).length > 0) { %>
            <table class="table">
                <thead>
                  <tr>
                    <th scope="col">Product</th>
                    <th scope="col">Quantity</th>
                    <th scope="col"></th>
                  </tr>
                </thead>
                <tbody>
                    <% Object.keys(cart).forEach(function(productId){ %>
                        <tr>
                            <td><%- cart[productId].name %></td>
                            <td><%- cart[productId].quantity %></td>
                            <td>
                                <div class="d-flex flex-wrap">
                                    <button class="btn btn-success m-1" data-toggle="tooltip" data-placement="bottom" title="Increase quantity"
                                        onclick=<%- "incItemQuantity('" + productId + "')"%>>
                                            <i class="fa-solid fa-plus"></i>
                                    </button>

                                    <button class="btn btn-warning m-1" data-toggle="tooltip" data-placement="bottom" title="Decrease quantity"
                                        onclick=<%- "decItemQuantity('" + productId + "')"%>>
                                            <i class="fa-solid fa-minus"></i>
                                    </button>

                                    <button class="btn btn-danger m-1" data-toggle="tooltip" data-placement="bottom" title="Remove product"
                                        onclick=<%- "removeItemFromCart('" + productId + "')"%>>
                                            <i class="fa-solid fa-trash"></i>
                                    </button>
                                </div>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
              </table>        
        <%} else { %>
            <div class="my-3">
                <h3>No products in cart</h3>
                <a href="/products/showcase">Go to products</a>
            </div>
        <% } %>
    </div>
</div>
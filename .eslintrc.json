{
  "env": {
    "node": true,
    "commonjs": true
  },
  "extends": ["eslint:recommended", "prettier"],
  "rules": {
    "indent": ["error", "tab"],
    "linebreak-style": ["error", "unix"],
    "no-console": "error",
    "quotes": ["error", "single"],
    "semi": ["error", "always"]
  },
  "parserOptions": {
    "ecmaVersion": 2021
  },
  "globals": {
    "log": true,
    "prisma": true
  }
}
